{
  "name": "php-file-creator",
  "displayName": "PHP File Creator",
  "description": "A VS Code Extension for PHP development",
  "publisher": "everstorm",
  "version": "0.2.0",
  "engines": {
    "vscode": "^1.99.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onLanguage:php"
  ],
  "main": "./dist/extension.js",
  "l10n": "./l10n",
  "contributes": {
    "configuration": {
      "title": "PHP File Creator",
      "properties": {
        "phpFileCreator.useStrictTypeInTemplates": {
          "type": "boolean",
          "default": false,
          "description": "%php-file-creator.config.useStrictTypeInTemplates.description%",
          "markdownDescription": "%php-file-creator.config.useStrictTypeInTemplates.description%",
          "order": 1
        },
        "phpFileCreator.useFallbackNamespace": {
          "type": "boolean",
          "default": false,
          "description": "%php-file-creator.config.useFallbackNamespace.description%",
          "markdownDescription": "%php-file-creator.config.useFallbackNamespace.description%",
          "order": 2
        },
        "phpFileCreator.fallbackNamespace": {
          "type": "string",
          "default": "App",
          "description": "%php-file-creator.config.fallbackNamespace.description%",
          "markdownDescription": "%php-file-creator.config.fallbackNamespace.description%",
          "pattern": "^[A-Z\\p{Lu}_][a-zA-Z0-9\\p{L}_\\x80-\\xff]*(\\\\[A-Z\\p{Lu}_][a-zA-Z0-9\\p{L}_\\x80-\\xff]*)*$",
          "patternErrorMessage": "%php-file-creator.config.fallbackNamespace.patternErrorMessage%",
          "order": 3
        }
      }
    },
    "commands": [
      {
        "command": "php-file-creator.newEmptyPhpFile",
        "title": "%php-file-creator.commands.newEmptyPhpFile.title%"
      },
      {
        "command": "php-file-creator.newEmptyPhpClass",
        "title": "%php-file-creator.commands.newEmptyPhpClass.title%"
      },
      {
        "command": "php-file-creator.newEmptyPhpInterface",
        "title": "%php-file-creator.commands.newEmptyPhpInterface.title%"
      },
      {
        "command": "php-file-creator.newEmptyPhpEnum",
        "title": "%php-file-creator.commands.newEmptyPhpEnum.title%"
      },
      {
        "command": "php-file-creator.newEmptyPhpTrait",
        "title": "%php-file-creator.commands.newEmptyPhpTrait.title%"
      },
      {
        "command": "php-file-creator.newTemplatePhpClass",
        "title": "%php-file-creator.commands.newTemplatePhpClass.title%"
      },
      {
        "command": "php-file-creator.newTemplatePhpInterface",
        "title": "%php-file-creator.commands.newTemplatePhpInterface.title%"
      },
      {
        "command": "php-file-creator.newTemplatePhpEnum",
        "title": "%php-file-creator.commands.newTemplatePhpEnum.title%"
      },
      {
        "command": "php-file-creator.newTemplatePhpTrait",
        "title": "%php-file-creator.commands.newTemplatePhpTrait.title%"
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "submenu": "php-file-creator.submenu",
          "group": "1_modification"
        }
      ],
      "php-file-creator.submenu": [
        {
          "command": "php-file-creator.newEmptyPhpFile",
          "group": "1_creation_empty@1"
        },
        {
          "command": "php-file-creator.newEmptyPhpClass",
          "group": "1_creation_empty@2"
        },
        {
          "command": "php-file-creator.newEmptyPhpInterface",
          "group": "1_creation_empty@3"
        },
        {
          "command": "php-file-creator.newEmptyPhpEnum",
          "group": "1_creation_empty@4"
        },
        {
          "command": "php-file-creator.newEmptyPhpTrait",
          "group": "1_creation_empty@5"
        },
        {
          "command": "php-file-creator.newTemplatePhpClass",
          "group": "2_creation_template@2"
        },
        {
          "command": "php-file-creator.newTemplatePhpInterface",
          "group": "2_creation_template@3"
        },
        {
          "command": "php-file-creator.newTemplatePhpEnum",
          "group": "2_creation_template@4"
        },
        {
          "command": "php-file-creator.newTemplatePhpTrait",
          "group": "2_creation_template@5"
        }
      ]
    },
    "submenus": [
      {
        "id": "php-file-creator.submenu",
        "label": "%php-file-creator.submenus.main.label%"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test",
    "l10n-extract": "npx @vscode/l10n-dev export -o ./l10n ./src",
    "l10n-pseudo": "npx @vscode/l10n-dev generate-pseudo -o ./l10n/ ./l10n/bundle.l10n.json ./package.nls.json"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@types/vscode": "^1.99.0",
    "@typescript-eslint/eslint-plugin": "^8.28.0",
    "@typescript-eslint/parser": "^8.28.0",
    "@vscode/l10n-dev": "^0.0.35",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1",
    "eslint": "^9.23.0",
    "ts-loader": "^9.5.2",
    "typescript": "^5.8.2",
    "webpack": "^5.98.0",
    "webpack-cli": "^6.0.1"
  },
  "dependencies": {
    "@vscode/l10n": "^0.0.18",
    "php-parser": "^3.2.3"
  }
}
